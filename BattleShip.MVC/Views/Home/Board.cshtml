@using Microsoft.AspNet.Identity

@{
    ViewBag.Title = "BattleShip powered by D.P.O.I.";
}

<link rel="stylesheet" href="~/Content/BattleShip.css" />
<link rel="stylesheet" href="~/Content/board2.css" />
<link href="~/Content/pnotify.custom.min.css" rel="stylesheet" />
<link href="~/Content/animate.css" rel="stylesheet" />
<audio preload="auto" id="waterSound">
    <source src="~/Content/Sounds/Water%20Splash%20Sound%20FX%201.mp3" type="audio/mpeg" />
</audio>
<audio preload="auto" id="explosionSound">
    <source src="~/Content/Sounds/Big%20Explosion%20Effect%20Video%20Mp4%20HD%20Sound.mp3" type="audio/mpeg" />

</audio>
<audio preload="auto" id="sinkEnemyDestroyerSound">
    <source src="~/Content/Sounds/We%20Sunk%20an%20Enemy%20Destroyer.mp3" type="audio/mpeg" />
</audio>

<h2>Chat</h2>
<input type="text" id="message" />
<input type="button" id="sendmessage" value="Send" />
<input type="hidden" id="displayname" />

<ul id="discussion"></ul>
<div id="waiter" style="visibility: hidden;">
    <label id="status">Waiting for an opponent...</label>
    <br>
    <img src="~/Content/Images/spin.gif" alt="Wait">
</div>

<div id="actions" style="visibility: hidden;">
    <button id="btnSetShips" class="btn btn-default" onclick="setMap();">Set Ships</button>
</div>
@*<div class="container">



        <div id="docks" class="left">
        </div>


        <div id="gameboard" class="right">
        </div>
    </div>*@

<div class="row">
    <div class="col-md-4">
        <div id="docks">
        </div>
    </div>

    <div class="col-md-4">
        <div id="gameboard">
            <div class="outer"></div>
        </div>
    </div>
    <div class="col-md-4">
        <div id="fireboard">
            <div class="outer"></div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/Scripts/pnotify.custom.min.js"></script>
    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.2.0.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <!--SignalR script to update the chat page and send messages.-->
    <!--<script src="~/Scripts/game/game.js"></script>-->
    <script src="~/Scripts/Battleship.js"></script>
}

<div class="modal fade" id="notificationModal" tabindex="-1" role="dialog" aria-labelledby="deleteLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content" id="notificationModalContent" style="top: 100px;">
            <div class="modal-header">
                <h4 class="modal-title" id="deleteLabel">Notification</h4>
            </div>
            <div class="modal-body">


                <p id="statusModal">Its your turn now!!</p>
                @Html.ActionLink("Play Again", "Game", "Game", new { }, new { @class = "btn btn-default center-block", style = "Display: none;", id = "btnPlayAgain" })
            </div>

        </div>
    </div>
</div>