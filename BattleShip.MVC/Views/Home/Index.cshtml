<link rel="stylesheet" href="~/Content/NoMoreTables.css" />


<div class="container">
    <div class="row">
        <div class="noTable">
            <table class="col-md-12 table-bordered table-striped table-condensed cf">
                <thead class="cf">
                    <tr>
                        <th>Enemy</th>
                        <th>Result</th>
                        <th>Date</th>
                        <th>Efficiency</th>
                        <th>Duration</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td data-title="Enemy">@item.EnemyUserName</td>
                            <td data-title="Result">
                               @item.Status
                            </td>
                            <td data-title="Date">
                                @item.Ended
                            </td>
                            <td data-title="Efficiency">
                                @if (item.Hitted != 0 && item.Missed != 0)
                                {
                                    @($"{((item.Hitted/(float) (item.Hitted + item.Missed))*100):0.##\\%}")
                                }
                                else
                                {<text>NaN</text>
                                }

                            </td>
                            <td data-title="Duration">
                                @item.Duration (mins)
                            </td>

                        </tr>


                    }


                </tbody>
            </table>
        </div>
    </div>

</div>